# 火灾应急救援RAG系统 - 环境变量配置示例
# 复制此文件为 .env 并修改相应的配置值

# ==================== 应用配置 ====================
APP_NAME=Fire Emergency RAG System
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=1

# ==================== 服务端口配置 ====================
EMERGENCY_SERVICE_HOST=localhost
EMERGENCY_SERVICE_PORT=8000
KNOWLEDGE_GRAPH_HOST=localhost
KNOWLEDGE_GRAPH_PORT=8001
RAG_SERVICE_HOST=localhost
RAG_SERVICE_PORT=3000
OLLAMA_SERVICE_HOST=localhost
OLLAMA_SERVICE_PORT=8003
CACHE_SERVICE_HOST=localhost
CACHE_SERVICE_PORT=8004
ADMIN_SERVICE_HOST=localhost
ADMIN_SERVICE_PORT=8005
USER_SERVICE_HOST=localhost
USER_SERVICE_PORT=8002

# ==================== 数据库配置 ====================
# PostgreSQL配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=fire_emergency
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=30

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=20

# Neo4j配置
NEO4J_HOST=localhost
NEO4J_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_MAX_CONNECTIONS=50
NEO4J_CONNECTION_TIMEOUT=30

# ChromaDB配置
CHROMA_HOST=localhost
CHROMA_PORT=8007
CHROMA_COLLECTION_NAME=fire_rescue_knowledge

# Ollama配置
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=qwen2.5:7b
OLLAMA_TIMEOUT=120

# ==================== 安全配置 ====================
# JWT配置
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 密码配置
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FORMAT={time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} - {message}
LOG_FILE=
LOG_ROTATION=1 day
LOG_RETENTION=30 days
LOG_COMPRESSION=zip
STRUCTURED_LOGGING=true
LOG_JSON_FORMAT=false

# ==================== 性能配置 ====================
# 服务配置
MAX_WORKERS=4
WORKER_TIMEOUT=30

# 缓存配置
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000

# 限流配置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# 超时配置
REQUEST_TIMEOUT=30
DATABASE_TIMEOUT=10
EXTERNAL_SERVICE_TIMEOUT=60

# 重试配置
MAX_RETRIES=3
RETRY_DELAY=1.0
RETRY_BACKOFF_FACTOR=2.0

# ==================== 监控配置 ====================
# Prometheus配置
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# 健康检查配置
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# 指标配置
METRICS_ENABLED=true
METRICS_INTERVAL=60

# 告警配置
ALERTING_ENABLED=false
ALERT_WEBHOOK_URL=

# ==================== 开发配置 ====================
# 开发模式特定配置
DEV_MODE=true
DEV_AUTO_RELOAD=true
DEV_DEBUG_TOOLBAR=true

# 测试配置
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/fire_emergency_test
TEST_REDIS_URL=redis://localhost:6379/1

# ==================== 生产环境配置 ====================
# 生产环境特定配置（仅在production环境下使用）
# PROD_SSL_CERT_PATH=/path/to/ssl/cert.pem
# PROD_SSL_KEY_PATH=/path/to/ssl/key.pem
