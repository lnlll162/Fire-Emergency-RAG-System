# Ollama服务Dockerfile
FROM python:3.11-slim

# 设置工作目录
WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# 复制依赖文件
COPY requirements-py313.txt .

# 安装Python依赖
RUN pip install --no-cache-dir -r requirements-py313.txt

# 复制项目文件
COPY shared/ ./shared/
COPY backend/services/ollama_service.py ./backend/services/
COPY scripts/start_ollama_service.py ./scripts/

# 创建必要的目录
RUN mkdir -p /app/models/embeddings

# 设置环境变量
ENV PYTHONPATH=/app
ENV OLLAMA_SERVICE_HOST=0.0.0.0
ENV OLLAMA_SERVICE_PORT=8003

# 暴露端口
EXPOSE 8003

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8003/health || exit 1

# 启动命令
CMD ["python", "scripts/start_ollama_service.py"]
